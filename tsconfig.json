{
  "compilerOptions": {
    "rootDir": "src",
    "target": "es5",
    "declaration": true,
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "lib/",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "es2019"
    ]
  },
  "exclude": [
    "src/__tests__/*"
  ],
  "include": [
    "src/**/*"
  ]
}